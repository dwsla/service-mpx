{
    "name" : "dwsla/service-mpx",
    "description" : "A PHP 5.4 library for accessing MPX services from ThePlatform (mpx.theplatform.com)",
    "type" : "library",
    "keywords" : [
        "The Platform",
        "MPX",
        "PHP"
    ],
    "homepage" : "http://dws.la/",
    "authors" : [
        {
            "name" : "David Weinraub",
            "email" : "david.weinraub@dws.la"
        }
    ],
    "license" : "MIT",
    
    "minimum-stability": "dev",
    
    "require": {
        "php": ">=5.4.0",
        "monolog/monolog": "~1.2",
        "guzzlehttp/guzzle": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5"
    },
    
    "autoload": {
        "psr-0": {
            "Dwsla\\Service\\Mpx": "src",
            "DwslaTest\\Unit\\Service\\Mpx": "tests/unit/src",
            "DwslaTest\\Integration\\Service\\Mpx": "tests/integration/src"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
